{
  // ----- UI / general -----
  "window.commandCenter": true,
  "workbench.colorTheme": "Red",
  "cursor.cpp.enablePartialAccepts": true,
  "files.autoGuessEncoding": true,
  "workbench.externalBrowser": "edge",
  "workbench.editor.alwaysShowEditorActions": true,
  "accessibility.underlineLinks": true,

  // ----- Python (WSL) -----
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.envFile": "${workspaceFolder}/.env",

  // ----- Ruff & formatting -----
  "python.formatting.provider": "none",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "ruff.organizeImports": true,
  "ruff.fixAll": true,

  // ----- Web projects (Prettier) -----
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // ----- Quality-of-life -----
  "errorLens.enabled": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "cSpell.words": ["Ollama", "ollama","num_predict"],

  // ----- Terminal -----
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.cwd": "${workspaceFolder}",

  // ----- REST Client -----
  "rest-client.decodeEscapedUnicodeCharacters": true,
  "rest-client.timeoutinmilliseconds": 30000
}
